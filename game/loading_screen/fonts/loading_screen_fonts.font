#######################################################################
#######################################################################
#######################################################################

# Each font should specify what it is used for.
# Name fonts after intented usage, not after source file names.
### Fonts used in-game ###

font = {
	name = "StandardGameFont"

	fontstyle = {
		style = regular
		fontfiles = "NotoSerif-Regular"
	}

	#fontstyle = {
	#	style = semibold # We should use this tag, theres no  "light" tag for styles in "textformatting.gui"
	#	fontfiles = "NotoSerif-Light"
	#}

	fontstyle = {
		style = bold
		fontfiles = "NotoSerif-Medium"
	}

	fontstyle = {
		style = italic
		fontfiles = "NotoSerif-Italic"
	}

	fontstyle = {
		style = bold|italic
		fontfiles = "NotoSerif-MediumItalic"
	}

	underlineformats = {
		default = {
			thickness = 1
			offset = 0.12
		}
	}
}

# Simple Font

font = {
	name = "SimpleFont"

	fontstyle = {
		style = regular
		fontfiles = "NotoSans-Regular"
	}

	fontstyle = {
		style = semibold # We should use this tag, theres no  "light" tag for styles in "textformatting.gui"
		fontfiles = "NotoSans-Light"
	}

	fontstyle = {
		style = bold
		fontfiles = "NotoSans-Medium"
	}

	fontstyle = {
		style = italic
		fontfiles = "NotoSans-Italic"
	}

	fontstyle = {
		style = bold|italic
		fontfiles = "NotoSans-MediumItalic"
	}

	underlineformats = {
		default = {
			thickness = 1
			offset = 0.12
		}
	}
}

# Headers font

font = {
	name = "HeadersFont"

	fontstyle = {
		style = regular
		fontfiles = "NotoSerif-SemiBold"
