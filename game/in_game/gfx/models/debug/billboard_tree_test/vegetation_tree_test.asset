pdxmesh = {
	name = "vegetation_tree_test_mesh"
	file = "vegetation_tree_test.mesh"
	scale = 2

	meshsettings = {
		name = "pPlaneShape2"
		index = 0
		texture_diffuse =  "billboard_test_diffuse.dds"
		texture_normal =   "billboard_test_normal.dds"
		texture_specular = "billboard_test_properties.dds"
		texture = { file = "tint_forest_with_terrain.dds" index = 3 srgb = yes }
		#texture = { file = "oceanic_tint.dds" index = 3 srgb = yes }
		shader = "billboard_test"
		shader_file = "gfx/FX/tree.shader"
		additional_shader_defines = { "BILLBOARD_SCALE_CORRECTION 0.76702f * 2.0f" } #0.76702 because this particular mesh had that difference between UV and Position, 2.0 because of scale = 2.0 further down
		additional_shader_defines = { "PDX_MESH_SNAP_VERTICES_TO_TERRAIN" }
	}

	meshsettings = {
		name = "pasted__pCylinderShape6"
		index = 0
		#texture_diffuse =  "billboard_test_diffuse.dds"
		#texture_normal =   "billboard_test_normal.dds"
		#texture_specular = "billboard_test_properties.dds"
        texture_diffuse = "tree_wood_diffuse.dds"
        texture_normal = "tree_wood_normal.dds"
        texture_specular = "tree_wood_properties.dds"
		shader = "tree"
		shader_file = "gfx/FX/tree.shader"
		additional_shader_defines = { "PDX_MESH_SNAP_VERTICES_TO_TERRAIN" }
	}
	scale = 2.0
}

