@common_property_enum_height = 20
@common_property_height = 20

template common_property_size {
	size = { 0 @common_property_height }
	layoutpolicy_horizontal = expanding
}

template common_property_text_input {
	using = common_property_size
	align = right
}

types CommonProperyTypes
{
	type common_property = hbox {
		tooltipwidget = {
			using = dockable_tooltip
		}

		layoutpolicy_horizontal = expanding
		layoutpolicy_vertical = preferred

		tooltip = "[ToolProperty.GetTooltip]"
		tooltip_widgetanchor = bottom|left

		spacing = 16

		visible = "[ToolProperty.IsVisible]"
		
		editor_textbox = {
			text = "[ToolProperty.GetLabel]"
			autoresize = yes
			elide = right
			fontcolor = "[ToolProperty.GetColor]"
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = preferred
		}

		block "content"
		{
		}
	}

	type vertical_common_property = vbox {
		tooltipwidget = {
			using = dockable_tooltip
		}
		
		layoutpolicy_horizontal = preferred
		layoutpolicy_vertical = preferred

		tooltip = "[ToolProperty.GetTooltip]"
		tooltip_widgetanchor = bottom|left

		spacing = 8

		editor_textbox = {
			text = "[ToolProperty.GetLabel]"
			autoresize = yes
			elide = right
			fontcolor = "[ToolProperty.GetColor]"
			layoutpolicy_horizontal = expanding
			layoutpolicy_vertical = preferred
		}

		block "content"
		{
		}
	}
	
	type common_property_bool = common_property {
		blockoverride "content"
		{
			checkbutton = {
				size = { @common_property_height @common_property_height }
				gfxtype = checkbuttongfx
				shaderfile = "gfx/FX/pdxgui_pushbutton.shader"
				texture = "gfx/editor_gui/editor_checkbox.dds"
				framesize = { 16 16 }
				enabled = "[ToolProperty.IsActive]"
				checked = "[ToolPropertyBool.IsEnabled]"
				onclick = "[ToolPropertyBool.SetEnabled(Not(ToolPropertyBool.IsEnabled))]"
			}
		}
	}

