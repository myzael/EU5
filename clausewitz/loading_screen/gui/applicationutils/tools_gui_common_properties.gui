	type common_property_enum = common_property {
		blockoverride "content"
		{
			dropdown = {
				name = "tools_property_enum_dropdown"
				size = { @common_property_width @common_property_enum_height }
				using = settings_dropdown
				datamodel = "[CPdxEnumValue.GetDropdownEntries]"
				onselectionchanged = "[CPdxEnumValue.SetDropdownValueIndex]"
				selectedindex = "[CPdxEnumValue.GetDropdownValueIndex]"
				blockoverride "dropdown_item_size" { size = { @common_property_width @common_property_enum_height } }
				blockoverride "dropdown_list_position" { position = { 0 @common_property_enum_height } }
				blockoverride "dropdown_gridbox_size" { addcolumn = @common_property_width  addrow = @common_property_enum_height }
				blockoverride "dropdown_item_text" { text = "[CString.GetString]" }
			}
		}
	}
	
