		}

		slider = {
			using = editor_scrollbar_slider
		}

		dec_button = {
			editor_scrollbar_button = {
				upframe = 9
				downframe = 10
				overframe = 11
				disableframe = 12
			}
		}

		inc_button = {
			editor_scrollbar_button = {
				upframe = 13
				downframe = 14
				overframe = 15
				disableframe = 16
			}
		}
	}
}

template sticky_vertical_scrollbar
